{
  "name": "sapegin",
  "type": "module",
  "private": true,
  "license": "See license in <Readme.md>",
  "scripts": {
    "start": "astro dev",
    "prebuild": "npm run sync",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "npm run lint:js && npm run lint:text",
    "lint:js": "eslint . --cache --fix",
    "lint:text": "textlint \"src/content/blog/*.md\"",
    "lint:text:fix": "npm run lint:text -- --fix",
    "format": "prettier --log-level warn --write \"**/*.{js,cjs,mjs,ts,tsx,astro,css,json,md}\"",
    "pretest": "npm run lint",
    "test": "astro check",
    "sync": "node --experimental-strip-types scripts/sync-book.ts; node --experimental-strip-types scripts/sync-squirrelsong.ts",
    "posttest": "npm run format",
    "prepare": "husky; panda codegen"
  },
  "engines": {
    "node": ">=22"
  },
  "browserslist": [
    ">1%",
    "last 1 version",
    "Firefox ESR",
    "not dead"
  ],
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.4.0",
    "@pandacss/dev": "^1.0.1",
    "@types/lodash": "^4.17.17",
    "@types/react": "^19.1.5",
    "astro": "^5.8.0",
    "astro-og-canvas": "^0.7.0",
    "github-slugger": "^2.0.0",
    "glob": "^11.0.2",
    "gray-matter": "^4.0.3",
    "hex-rgb": "^5.0.0",
    "image-size": "^2.0.2",
    "lodash": "^4.17.21",
    "markdown-it": "^14.1.0",
    "markdown-to-jsx": "^7.7.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-group": "^4.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.14.1",
    "richtypo": "^7.0.1",
    "sanitize-html": "^2.17.0",
    "shiki": "^3.4.2",
    "strip-json-comments": "^5.0.2",
    "tamia": "^7.1.11",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/markdown": "^7.1.0",
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.16.0",
    "eslint": "^9.33.0",
    "eslint-config-tamia": "^9.2.3",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "textlint": "^15.2.2",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-apostrophe": "^3.0.0",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-diacritics": "^2.1.4",
    "textlint-rule-no-dead-link": "^6.0.1",
    "textlint-rule-stop-words": "^5.1.2",
    "textlint-rule-terminology": "^5.2.15",
    "textlint-rule-write-good": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,tsx,astro,css,json,md}": "prettier --write",
    "*.{js,cjs,mjs,ts,tsx,astro}": "eslint --cache --fix"
  }
}
