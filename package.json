{
  "name": "sapegin",
  "type": "module",
  "private": true,
  "license": "See license in <Readme.md>",
  "scripts": {
    "start": "astro dev",
    "prebuild": "npm run sync",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "npm run lint:js && npm run lint:text",
    "lint:js": "eslint . --ext .js,.ts,.tsx,.astro --cache --fix",
    "lint:text": "textlint \"src/content/blog/*.md\"",
    "lint:text:fix": "npm run lint:text -- --fix",
    "format": "prettier --log-level warn --write \"**/*.{js,ts,tsx,astro,md}\"",
    "pretest": "npm run lint",
    "test": "astro check",
    "sync": "node scripts/sync-til.js; tsx scripts/sync-book; tsx scripts/sync-squirrelsong",
    "posttest": "npm run format",
    "prepare": "husky; panda codegen"
  },
  "engines": {
    "node": ">=20"
  },
  "browserslist": [
    ">1%",
    "last 1 version",
    "Firefox ESR",
    "not dead"
  ],
  "dependencies": {
    "@astrojs/check": "^0.7.0",
    "@astrojs/react": "^3.6.0",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/sitemap": "^3.1.6",
    "@pandacss/dev": "^0.41.0",
    "@types/lodash": "^4.17.0",
    "@types/react": "^18.3.1",
    "astro": "^4.11.3",
    "astro-og-canvas": "^0.5.1",
    "clsx": "^2.1.1",
    "csstype": "^3.1.3",
    "fs-extra": "^11.2.0",
    "github-slugger": "^2.0.0",
    "glob": "^10.3.12",
    "gray-matter": "^4.0.3",
    "hex-rgb": "^5.0.0",
    "image-size": "^1.1.1",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-group": "^4.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.13.1",
    "richtypo": "^5.1.3",
    "richtypo-rules-en": "^5.1.3",
    "romanize": "^1.1.1",
    "sanitize-html": "^2.13.0",
    "shiki": "^1.10.0",
    "strip-json-comments": "^5.0.1",
    "tamia": "^7.1.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/markdown-it": "^13.0.2",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "eslint-config-tamia": "^8.1.3",
    "eslint-plugin-astro": "^0.33.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "textlint": "^14.0.4",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-apostrophe": "^2.0.0",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-diacritics": "^1.0.0",
    "textlint-rule-no-dead-link": "^5.1.2",
    "textlint-rule-stop-words": "^5.0.7",
    "textlint-rule-terminology": "^5.0.1",
    "textlint-rule-write-good": "^2.0.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,astro,md}": "prettier --write",
    "*.{js,ts,tsx,astro}": "eslint --cache --fix"
  }
